{
	var bigPrice = sales[i];
	if (highest < bigPrice) 
	{	 highest = bigPrice;
		 highestIndex = i;
	}
} 	
console.log("The highest price paid for the the widget was: " + highestIndex);  //highest price paid

var lowest = 0;
var lowestIndex = 0;
